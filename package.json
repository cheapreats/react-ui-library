{
    "name": "@cheapreats/react-ui",
    "version": "2.3.25",
    "description": "React UI library for CheaprEats",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "start": "start-storybook -p 6006",
        "deploy": "build-storybook --quiet -o .deploy",
        "build": "rm -rf dist && tsc && NODE_ENV=production babel dist -d dist",
        "test": "tsc && npm run eslint:fix",
        "prepublish": "npm run lint && npm run build",
        "eslint": "eslint ./src --ext tsx,ts,jsx,js",
        "eslint:fix": "npm run eslint -- --fix",
        "prettier": "prettier '**/*.ts' '**/*.tsx' '**/*.js' '**/*.jsx'",
        "prettier:fix": "npm run prettier -- --write",
        "lint": "npm run prettier:fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CheaprEats/react-ui.git"
    },
    "author": "CheaprEats Inc.",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/CheaprEats/react-ui/issues"
    },
    "homepage": "https://github.com/CheaprEats/react-ui#readme",
    "peerDependencies": {
        "react": "*",
        "react-dom": "*",
        "styled-components": "*",
        "styled-icons": "*"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.6",
        "@babel/preset-env": "^7.8.6",
        "@babel/preset-react": "^7.8.3",
        "@storybook/addon-actions": "^5.3.14",
        "@storybook/addon-info": "^5.3.14",
        "@storybook/addon-knobs": "^5.3.14",
        "@storybook/addon-links": "^5.3.14",
        "@storybook/addon-notes": "^5.3.14",
        "@storybook/addons": "^5.3.14",
        "@storybook/react": "^5.3.14",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.6",
        "babel-plugin-module-resolver": "^3.2.0",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "^17.1.1",
        "eslint-config-prettier": "^6.10.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.18.3",
        "husky": "^3.1.0",
        "prettier": "^1.19.1",
        "react": "^16.13.0",
        "react-docgen-typescript-loader": "^3.6.0",
        "react-dom": "^16.13.0",
        "styled-components": "^5.0.1",
        "styled-icons": "^7.15.1",
        "typescript": "^3.8.2"
    },
    "aliases": {
        "@Containers": "src/Containers",
        "@Layouts": "src/Fragments",
        "@Inputs": "src/Inputs",
        "@Text": "src/Text",
        "@Themes": "src/Themes",
        "@Utils": "src/Utils"
    },
    "eslintIgnore": [
        "stories",
        "scripts",
        "node_modules",
        "dist",
        ".storybook",
        ".deploy"
    ],
    "dependencies": {
        "@types/emoji-mart": "^2.11.3",
        "@types/react-beautiful-dnd": "^12.1.1",
        "@types/react-image-crop": "^8.1.2",
        "@types/react-dom": "^16.9.5",
        "@types/storybook__react": "^4.0.2",
        "@types/styled-components": "^4.4.3",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
        "emoji-mart": "^2.11.2",
        "react-beautiful-dnd": "^12.2.0",
        "react-image-crop": "^8.5.0"
    }
}
