{
  "name": "@cheapreats/react-ui",
  "version": "2.0.7",
  "description": "React UI library for CheaprEats",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "start": "start-storybook -p 6006",
    "deploy": "build-storybook --quiet -o .deploy",
    "build": "rm -rf dist && tsc && NODE_ENV=production babel dist -d dist",
    "prepublish": "npm run lint && npm run build",
    "eslint": "eslint ./src --ext tsx,ts,jsx,js",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier": "prettier '**/*.ts' '**/*.tsx' '**/*.js' '**/*.jsx'",
    "prettier:fix": "npm run prettier -- --write",
    "lint": "npm run eslint:fix && npm run prettier:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CheaprEats/react-ui.git"
  },
  "author": "CheaprEats Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CheaprEats/react-ui/issues"
  },
  "homepage": "https://github.com/CheaprEats/react-ui#readme",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*",
    "styled-components": "*",
    "styled-icons": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-info": "^5.1.9",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addon-notes": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@types/storybook__react": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "ora": "^3.4.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-dom": "^16.8.6",
    "styled-components": "^4.3.2",
    "styled-icons": "^7.15.1",
    "typescript": "^3.5.2"
  },
  "aliases": {
    "@Containers": "src/Containers",
    "@Layouts": "src/__Layouts",
    "@Inputs": "src/Inputs",
    "@Text": "src/Text",
    "@Themes": "src/Themes",
    "@Utils": "src/Utils"
  },
  "eslintIgnore": [
    "stories",
    "scripts",
    "node_modules",
    "dist",
    ".storybook",
    ".deploy"
  ]
}
