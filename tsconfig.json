{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2017", "dom"],
        "sourceMap": false,
        "jsx": "react",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "rootDirs": ["src", "stories"],
        "baseUrl": "./src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true,
        "declarationMap": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@Layouts/*": ["./Fragments/*"],
            "@Layouts": ["./Fragments"],
            "@Containers/*": ["./Containers/*"],
            "@Containers": ["./Containers"],
            "@Inputs/*": ["./Inputs/*"],
            "@Inputs": ["./Inputs"],
            "@Text/*": ["./Text/*"],
            "@Text": ["./Text"],
            "@Themes/*": ["./Themes/*"],
            "@Themes": ["./Themes"],
            "@Utils/*": ["./Utils/*"],
            "@Utils": ["./Utils"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "scripts"]
}
