{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2017", "dom", "ES2020", "ESNext"],
        "sourceMap": false,
        "jsx": "react",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "rootDirs": ["src"],
        "baseUrl": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true,
        "declarationMap": false,
        "declarationDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@Layouts/*": ["./Fragments/*"],
            "@Layouts": ["./Fragments"],
            "@Containers/*": ["./Containers/*"],
            "@Containers": ["./Containers"],
            "@Overview/*": ["./Overview/*"],
            "@Overview": ["./Overview"],
            "@Inputs/*": ["./Inputs/*"],
            "@Inputs": ["./Inputs"],
            "@Text/*": ["./Text/*"],
            "@Text": ["./Text"],
            "@Themes/*": ["./Themes/*"],
            "@Themes": ["./Themes"],
            "@Utils/*": ["./Utils/*"],
            "@Utils": ["./Utils"]
        }
    },
    "include": ["src/**/*", "__tests__"],
    "files": [
        "src/styled.d.ts",
        "src/declaration.d.ts"
    ],
    "exclude": ["node_modules", "**/.*/", "../src/**/*.stories.@(js|mdx|tsx|ts|jsx)", "scripts", "./dist"]
}
